{
  "name": "mcp-zephyr-scale",
  "version": "0.3.3",
  "description": "MCP Server for Zephyr test management tool",
  "keywords": [
    "zephyr",
    "mcp"
  ],
  "license": "MIT",
  "author": "bun913",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-zephyr-scale": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "format": "biome format --write ./src",
    "lint": "biome lint ./src",
    "check": "biome check ./src",
    "test": "vitest ./test --reporter=verbose --coverage",
    "test:ci": "vitest run ./test --silent --coverage --reporter=verbose",
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm && tsc --emitDeclarationOnly",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^22.18.12",
    "@vitest/coverage-v8": "^3.0.9",
    "bun": "^1.3.1",
    "dotenv": "^17.2.3",
    "typescript": "~5.7.2",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "winston": "^3.18.3",
    "zephyr-api-client": "^0.2.3",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=20.18.1"
  }
}
